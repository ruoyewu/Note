<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuruoye.note.widget.FontTextView
        android:id="@+id/tv_backup_remote_tip"
        android:gravity="center_horizontal"
        android:text="@string/example"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wuruoye.note.widget.SpringScrollView
        android:id="@+id/ssv_backup_remote"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_backup_remote"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.wuruoye.note.widget.SpringScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wuruoye.note.widget.FontTextView
            android:id="@+id/tv_backup_remote_back"
            android:background="@drawable/back"
            android:text="退"
            android:transitionName="@string/translate_note_button"
            android:gravity="center"
            android:textColor="@color/romance"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="UnusedAttribute" />
        <com.wuruoye.note.widget.FontTextView
            android:id="@+id/tv_backup_remote_input"
            android:text="导"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/carnation"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>