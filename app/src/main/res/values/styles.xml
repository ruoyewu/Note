<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="colorPrimary">@color/romance</item>
        <item name="colorPrimaryDark">@color/romance</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:popupMenuStyle">@style/popMenu</item>
        <item name="android:popupWindowStyle">@style/popMenu</item>
    </style>w

    <style name="windowAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
    </style>

    <style name="popMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
