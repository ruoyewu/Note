<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorPrimaryInverse">@color/gray</item>
        <item name="colorPrimary">@color/romance</item>
        <item name="colorPrimaryDark">@color/romance</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:popupMenuStyle">@style/popMenu</item>
        <item name="android:popupWindowStyle">@style/popMenu</item>
        <item name="android:alertDialogTheme">@style/dialogTheme</item>
        <item name="android:datePickerStyle">@style/datePickerTheme</item>
    </style>

    <style name="windowAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
    </style>

    <style name="popMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogTheme" parent="AlertDialog.AppCompat.Light">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="datePickerTheme" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:divider">@android:color/transparent</item>
    </style>

</resources>
